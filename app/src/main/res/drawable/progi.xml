<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

<item android:id="@android:id/background" android:height="6dp" android:top="8dp">
    <shape >
        <gradient
            android:angle="45"
            android:endColor="#808080"
            android:startColor="#979aaa"
            />
        <corners android:radius="15dp" />
    </shape>
</item>
<item android:id="@android:id/progress" android:height="6dp" android:top="8dp">
<clip>
    <shape>

        <gradient
            android:angle="45"
            android:endColor="#0d0db1"
            android:startColor="#ee00ff"
            />
        <corners android:radius="15dp" />
    </shape>
</clip>
</item>
</layer-list>